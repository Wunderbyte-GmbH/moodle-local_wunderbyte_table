{{!
    @template local_wunderbyte_table/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "listheaderclass" : "listheaderclass",
       "cardheaderclass" : "cardheaderclass",
       "cardfooterclass" : "cardfooterclass",
       "cardimageclass" : "cardimageclass",
       "cardheader": [
          {
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass",
            "value" : "value"
          }
       ],
       "cardbody": [
          {
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass",
            "value" : "value"
          }
       ],
       "cardfooter": [
          {
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass",
            "value" : "value"
          }
       ],
       "cardimage": [
          {
            "value" : "value"
          }
       ]
    }
}}
   <div class="card mb-2 search-data-element"
      {{#datafields}}
        data-{{key}}="{{value}}"
      {{/datafields}}
      >
      <div class="{{cardimageclass}}">
          {{#cardimage}}
              {{{value}}}
          {{/cardimage}}
        </div>
      <div class="{{cardheaderclass}}">
          {{#cardheader}}
               {{#columnclass}}<div class="{{.}} ">{{/columnclass}}
                  {{#columnkeyclass}}<span class="{{.}} ">{{/columnkeyclass}}
                    {{^keystring}}
                   {{{key}}}
                  {{/keystring}}
                  {{#keystring}}
                    {{.}}
                  {{/keystring}}:
                  {{#columnkeyclass}}</span>{{/columnkeyclass}}
                  {{#columnvalueclass}}<span class="{{.}} ">{{/columnvalueclass}}
                    {{{value}}}
                  {{#columnvalueclass}}</span>{{/columnvalueclass}}
               {{#columnclass}}</div>{{/columnclass}}
          {{/cardheader}}
      </div>
      <div class="{{cardbodyclass}} wunderbyteTable">
                {{#cardbody}}
               {{#columnclass}}<div class="{{.}} ">{{/columnclass}}
                  {{#columnkeyclass}}<span class="{{.}} ">{{/columnkeyclass}}
                    {{^keystring}}
                   {{{key}}}
                  {{/keystring}}
                  {{#keystring}}
                    {{.}}
                  {{/keystring}}:
                  {{#columnkeyclass}}</span>{{/columnkeyclass}}
                  {{#columnvalueclass}}<span class="{{.}} ">{{/columnvalueclass}}
                    {{{value}}}
                  {{#columnvalueclass}}</span>{{/columnvalueclass}}
               {{#columnclass}}</div>{{/columnclass}}
               {{/cardbody}}
      </div>
      <div class="{{cardfooterclass}}">
         {{#cardfooter}}
               {{#columnclass}}<div class="{{.}} ">{{/columnclass}}
                  {{#columnkeyclass}}<span class="{{.}} ">{{/columnkeyclass}}
                    {{^keystring}}
                   {{{key}}}
                  {{/keystring}}
                  {{#keystring}}
                    {{.}}
                  {{/keystring}}:
                  {{#columnkeyclass}}</span>{{/columnkeyclass}}
                  {{#columnvalueclass}}<span class="{{.}} ">{{/columnvalueclass}}
                    {{{value}}}
                  {{#columnvalueclass}}</span>{{/columnvalueclass}}
               {{#columnclass}}</div>{{/columnclass}}
          {{/cardfooter}}
      </div>
   </div>
{{!
    @template local_wunderbyte_table/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none

    Example context (json):
    {
    "id": "accordion1",
    "hierarchy": [
        {
        "index": 1,
        "label": "Category 1",
        "values": [
            {
            "key": "Event 1-1"
            },
            {
            "key": "Event 1-2"
            }
        ]
        },
        {
        "index": 2,
        "label": "Category 2",
        "values": [
            {
            "key": "Event 2-1"
            },
            {
            "key": "Event 2-2"
            },
            {
            "key": "Event 2-3"
            }
        ]
        }
    ]
    }
}}
{{#filter}}
    {{#categories}}
        <div class="w-100" data-type="wb-filterview">
            <div class="container py-80 ">
                <div class="container" id="accordion-{{index}}">
                    <div class="row">
                    {{#hierarchy}}
                    <div class="col-lg-6">
                        <div>
                        <div class="category-item" type="button" data-toggle="collapse" data-target="#collapse-{{index}}" aria-expanded="false" aria-controls="collapse-{{index}}" style="width: 100%; text-decoration: none;">
                                <h4>{{label}}</h4>

                                <h4>
                                <i class="fas fa-calendar-alt category-icon text-primary"></i>
                                <span class="category-count text-primary">{{count}}</span>
                                <i class="fa fa-chevron-down ml-2 text-primary" id="icon-{{index}}"></i>
                                </h4>
                        </div>
                        <div id="collapse-{{index}}" class="collapse" aria-labelledby="heading-{{index}}">
                            <ul class="list-unstyled event-list">
                                {{#values}}
                                <li><a href="#">{{key}}</a><span class="event-count">{{count}} Veranstaltungen</span></li>
                                {{/values}}
                            </ul>
                        </div>
                        </div>
                    </div>
                    {{/hierarchy}}
                    </div>
                </div>
            </div>
        </div>
    {{/categories}}
{{/filter}}
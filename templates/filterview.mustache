{{!
    @template local_wunderbyte_table/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none

    Example context (json):
    {
    "id": "accordion1",
    "hierarchy": [
        {
        "index": 1,
        "label": "Category 1",
        "values": [
            {
            "key": "Event 1-1"
            },
            {
            "key": "Event 1-2"
            }
        ]
        },
        {
        "index": 2,
        "label": "Category 2",
        "values": [
            {
            "key": "Event 2-1"
            },
            {
            "key": "Event 2-2"
            },
            {
            "key": "Event 2-3"
            }
        ]
        }
    ]
    }
}}
{{#filter}}
    {{#categories}}
        <div class="w-100 wrapfilter" data-type="wb-filterview">
            <div class="container py-80 ">
                <div class="container" id="accordion-{{index}}">
                <h2 class="lexa-h2" style="margin-bottom: 48px">Themen nach Kategorie</h2>
                    <div class="row">
                    <div class="col-lg-6">
                                        {{#lefthierarchy}}
                        <div class="singlehierarchy">
                        <div class="category-item d-flex" type="button" data-toggle="collapse" data-target="#collapse-{{index}}" aria-expanded="false" aria-controls="collapse-{{index}}" style="width: 100%; text-decoration: none;">
                                <h4 class="lexa-h4">{{label}}</h4>

                                <h4 class="ml-auto lexa-h4">
                                <img class="mr-2" src="data:image/png;base64," alt="Base64 Icon">
                                <span class="category-count text-primary">{{count}}</span>
                                <i class="fa fa-chevron-down ml-2" id="icon-{{index}}"></i>
                                </h4>
                        </div>
                        <div id="collapse-{{index}}" class="collapse" aria-labelledby="heading-{{index}}">
                            <ul class="list-unstyled event-list">
                                {{#values}}
                                <li class="d-flex"><a href='{{baseurl}}&wbtfilter={"{{columnname}}":["{{value}}"]}' class="lexa-b1 text-underline">{{key}}</a><span class="event-count ml-auto lexa-info">{{count}} Veranstaltungen</span></li>
                                {{/values}}
                            </ul>
                        </div>
                        </div>
                         {{/lefthierarchy}}
                    </div>
                    <div class="col-lg-6">
                    {{#righthierarchy}}
                               <div class="singlehierarchy">
                        <div class="category-item d-flex" type="button" data-toggle="collapse" data-target="#collapse-{{index}}" aria-expanded="false" aria-controls="collapse-{{index}}" style="width: 100%; text-decoration: none;">
                                <h4 class="lexa-h4">{{label}}</h4>

                                <h4 class="ml-auto lexa-h4">
                                <img class="mr-2" src="data:image/png;base64," alt="Base64 Icon">
                                <span class="category-count text-primary">{{count}}</span>
                                <i class="fa fa-chevron-down ml-2" id="icon-{{index}}"></i>
                                </h4>
                        </div>
                        <div id="collapse-{{index}}" class="collapse" aria-labelledby="heading-{{index}}">
                            <ul class="list-unstyled event-list">
                                {{#values}}
                                <li class="d-flex"><a href='{{baseurl}}&wbtfilter={"{{columnname}}":["{{value}}"]}' class="lexa-b1 text-underline">{{key}}</a><span class="event-count ml-auto lexa-info">{{count}} Veranstaltungen</span></li>
                                {{/values}}
                            </ul>
                        </div>
                        </div>
                     {{/righthierarchy}}
                    </div>
                    </div>
                </div>
            </div>
        </div>
    {{/categories}}
{{/filter}}
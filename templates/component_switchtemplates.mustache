{{!
    @template local_wunderbyte_table/component_switchtemplates
    Template for the wunderbyte table template switcher.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none

    Example context (json):
    {
        "switchtemplates": [
            "templates": [
                {
                    "template": "local_wunderbyte_table/twtable_list",
                    "label": "List"
                },
                {
                    "template": "local_wunderbyte_table/twtable_cards",
                    "label": "Cards"
                }
            ],
            "selectedtemplate": "local_wunderbyte_table/twtable_list"
        ]
    }
}}
{{#switchtemplates}}
<div class="mr-3" aria-label="Template switcher dropdown" style="display:inline-flex;">
    <i class="{{switchtemplatesiconclasses}} text-primary" aria-hidden="true"></i>
    <select class="custom-select" id="wbtabletemplateswitcher" style="width: fit-content;"
        data-id="1" data-type="wb_action_button" data-methodname="switchtemplates" data-nomodal="true"
        data-selected-value="{{selectedtemplate}}">
        {{#templates}}
        <option value="{{template}}">
            {{#label}}{{.}}{{/label}}
        </option>
        {{/templates}}
    </select>
</div>
{{/switchtemplates}}

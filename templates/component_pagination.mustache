{{!
    @template local_wunderbyte_table/pagination
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "nopages" : "nopages",
       "previouspage": "1",
       "disableprevious": "disabled",
       "nextpage": "3",
       "disablenext": "disabled",
       "pages" : [
        {
           "active" : "active",
           "pagenumber" : "2",
           "ellipsis" : "ellipsis"
       }
       ]
    }

}}

{{^nopages}}
    <div class="wbt-pagination-navs">
        <div>
            <nav aria-label="{{#str}} page, core {{/str}}">
            <ul class="pagination">
                <li class="page-item {{disableprevious}}" data-pagenumber="{{previouspage}}">
                    <a class="page-link" role="button" aria-label="{{#str}} previous, core {{/str}}">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">{{#str}} previous, core {{/str}}</span>
                    </a>
                </li>
                {{#pages}}
                    {{^ellipsis}}
                        <li class="page-item {{active}}" data-pagenumber="{{pagenumber}}"><a class="page-link" role="button" aria-label="{{#str}} page, core {{/str}} {{pagenumber}}">{{pagenumber}}</a></li>
                    {{/ellipsis}}
                    {{#ellipsis}}
                        <li class="page-item disabled"><a class="page-link" role="button">â€¦</a></li>
                    {{/ellipsis}}
                {{/pages}}
                <li class="page-item {{disablenext}}" data-pagenumber="{{nextpage}}">
                    <a class="page-link" role="button" aria-label="{{#str}} next, core {{/str}}">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">{{#str}} next, core {{/str}}</span>
                    </a></li>
            </ul>
            </nav>
        </div>
        {{#gotopage}}
        <div class="wbt-gotopage float-right">
            <span>{{#str}} gotopage, local_wunderbyte_table {{/str}}</span>
            <select class="custom-select go-to-page-select" data-initial-value="5">
                {{#totalpages}}
                    <option {{#selected}}selected{{/selected}}>{{value}}</option>
                {{/totalpages}}
            </select>
        </div>
        {{/gotopage}}
    </div>

{{/nopages}}
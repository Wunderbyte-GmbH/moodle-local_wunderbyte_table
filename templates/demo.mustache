{{!
    @template local_wunderbyte_table/actionbutton
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:

    Example context (json):
    {
        "tab1_name": "Tab1",
        "tab2_name": "Tab2",
        "tab3_name": "Tab3",
        "tab4_name": "Tab4",
        "table1": "<table><tr><td>Table 1 Data</td></tr></table>",
        "table2": "<table><tr><td>Table 2 Data</td></tr></table>",
        "table3": "<table><tr><td>Table 3 Data</td></tr></table>",
        "table4": "<table><tr><td>Table 4 Data</td></tr></table>"
    }

}}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#tab1name" role="tab" aria-controls="tab1name" aria-selected="true">{{tab1_name}}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#tab2name" role="tab" aria-controls="tab2name" aria-selected="false">{{tab2_name}}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="messages-tab" data-toggle="tab" href="#tab3name" role="tab" aria-controls="tab3name" aria-selected="false">{{tab3_name}}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="settings-tab" data-toggle="tab" href="#tab4name" role="tab" aria-controls="tab4name" aria-selected="false">{{tab4_name}}</a>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active" id="tab1name" role="tabpanel" aria-labelledby="home-tab">{{{table1}}}</div>
    <div class="tab-pane" id="tab2name" role="tabpanel" aria-labelledby="profile-tab">{{{table2}}}</div>
    <div class="tab-pane" id="tab3name" role="tabpanel" aria-labelledby="messages-tab">{{{table3}}}</div>
    <div class="tab-pane" id="tab4name" role="tabpanel" aria-labelledby="settings-tab">{{{table4}}}</div>
  </div>
{{!
    @template local_catquiz/actions

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

     Example context (json):
    {
        "id": "1",
        "name": "theCheckbox",
        "label": "my label",
        "checkboxclass": "my-class",
        "checked": true
    }
}}

<div class="form-check form-check-inline">
  <input class="form-check-input wb-checkbox {{checkboxclass}}" type="checkbox" id="{{id}}" name="{{name}}" value="wb_checkbox_{{id}}" {{#checked}}checked{{/checked}}>
  <label class="form-check-label wb-checkbox {{checkboxclass}}" for="wb_checkbox_{{id}}">{{label}}</label>
</div>
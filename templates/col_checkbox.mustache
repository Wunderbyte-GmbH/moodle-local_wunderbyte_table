{{!
    @template local_wunderbyte_table/col_checkbox

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

     Example context (json):
    {
        "id": "1",
        "name": "theCheckbox",
        "label": "my label",
        "checkboxclass": "my-class",
        "checked": true
    }
}}

<div class="form-check form-check-inline">
  <input class="form-check-input wb-checkbox {{checkboxclass}}" type="checkbox" id="{{id}}_{{tableid}}" name="{{name}}" value="wb_checkbox_{{id}}" data-tableid="{{tableid}}" {{#checked}}checked{{/checked}}>
  <label class="form-check-label wb-checkbox {{checkboxclass}}" for="{{id}}_{{tableid}}" data-tableid="{{tableid}}">{{label}}</label>
</div>
{{!
    @template local_wunderbyte_table/actionbutton
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:

    Example context (json):
    {
       "idstring": "sdkjafjlsadjflasjdklf",
       "encodedtable": "fdaskjfdjalsdjfkldsjflsajflksdjfklasdjflkdasjljkdfsalkjfoweijfoeisjgdklyjglky",
       "label": "mylabel"
    }

}}
{{#showactionbuttons}}
    {{^ischeckbox}}
    <span>
        <a href="{{href}}" class="{{class}} wb_action_button "
            title="{{methodname}}-{{name}}"
            data-id="{{id}}"
            data-methodname="{{methodname}}"
            data-formname="{{formname}}"
            data-nomodal="{{nomodal}}"
            data-selectionmandatory="{{selectionmandatory}}"
            {{#data}}
                data-{{key}}="{{value}}"
            {{/data}}>
            <i class="{{iclass}}"></i>
            {{label}}
        </a>
    </span>
    {{/ischeckbox}}
    {{#ischeckbox}}
        <div class="form-check">
            <input
            id="wb-checkbox-{{id}}"
            name="{{methodname}}-{{name}}"
            type="checkbox"
            {{#checked}} checked {{/checked}}
            {{#disabled}} disabled {{/disabled}}
            class="{{class}} form-check-input wb_action_button"
            data-id="{{id}}"
            data-ischeckbox = true
            data-methodname="{{methodname}}"
            {{#data}}
                data-{{key}}="{{value}}"
            {{/data}}>
            <label class="form-check-label" for="wb-checkbox-{{id}}">{{label}}</label>
        </div>
    {{/ischeckbox}}
{{/showactionbuttons}}
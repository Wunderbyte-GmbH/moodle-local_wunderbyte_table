{{!
    @template local_wunderbyte_table/actionbutton
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:

    Example context (json):
    {
    "showactionbuttons": [
        {
        "ischeckbox": false,
        "href": "https://example.com",
        "class": "button-class",
        "methodname": "method1",
        "name": "name1",
        "id": "button1",
        "nomodal": false,
        "selectionmandatory": true,
        "data": [
            {
            "key": "data1",
            "value": "value1"
            },
            {
            "key": "data2",
            "value": "value2"
            }
        ],
        "iclass": "fa fa-icon",
        "label": "Button 1 Label"
        },
        {
        "ischeckbox": true,
        "id": "checkbox1",
        "methodname": "method2",
        "name": "name2",
        "checked": true,
        "disabled": false,
        "class": "checkbox-class",
        "data": [
            {
            "key": "data3",
            "value": "value3"
            },
            {
            "key": "data4",
            "value": "value4"
            }
        ],
        "label": "Checkbox 1 Label"
        }
    ]
    }
}}
{{#showactionbuttons}}
    {{^ischeckbox}}
    <span>
        <a href="{{href}}" class="{{class}} wb_action_button "
            title="{{methodname}}-{{name}}"
            data-id="{{id}}"
            data-methodname="{{methodname}}"
            data-formname="{{formname}}"
            data-nomodal="{{nomodal}}"
            data-selectionmandatory="{{selectionmandatory}}"
            {{#data}}
                data-{{key}}="{{value}}"
            {{/data}}>
            <i class="{{iclass}}" aria-label="{{arialabel}}" title="{{title}}"></i>
            {{label}}
        </a>
    </span>
    {{/ischeckbox}}
    {{#ischeckbox}}
        <div class="form-check">
            <input
            id="wb-checkbox-{{id}}"
            name="{{methodname}}-{{name}}"
            type="checkbox"
            {{#checked}} checked {{/checked}}
            {{#disabled}} disabled {{/disabled}}
            class="{{class}} form-check-input wb_action_button"
            data-id="{{id}}"
            data-ischeckbox = true
            data-methodname="{{methodname}}"
            {{#data}}
                data-{{key}}="{{value}}"
            {{/data}}>
            <label class="form-check-label" for="wb-checkbox-{{id}}">{{label}}</label>
        </div>
    {{/ischeckbox}}
{{/showactionbuttons}}
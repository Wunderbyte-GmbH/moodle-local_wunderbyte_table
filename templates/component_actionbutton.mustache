{{!
    @template local_wunderbyte_table/actionbutton
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:

    Example context (json):
    {
       "idstring": "sdkjafjlsadjflasjdklf",
       "encodedtable": "fdaskjfdjalsdjfkldsjflsajflksdjfklasdjflkdasjljkdfsalkjfoweijfoeisjgdklyjglky",
       "label": "mylabel"
    }

}}
{{#showactionbuttons}}
    {{^ischeckbox}}
    <span>
        <a href="{{href}}" class="{{class}} wb_action_button "
            data-id="{{id}}"
            data-methodname="{{methodname}}"
            data-formname="{{formname}}"
            data-nomodal="{{nomodal}}"
            {{#data}}
                data-{{key}}="{{value}}"
            {{/data}}>
            <i class="{{iclass}}"></i>
            {{label}}
        </a>
    </span>
    {{/ischeckbox}}
    {{#ischeckbox}}
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="{{id}}">
            <label class="form-check-label" for="{{id}}">{{checkboxlabel}}</label>
        </div>
    {{/ischeckbox}}
{{/showactionbuttons}}
{{!
    @template local_wunderbyte_table/viewtable
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
        "print": {
            "baseurl": "https://example.com/print",
            "sesskey": "your_sesskey_value",
            "idstring": "your_idstring_value",
            "encodedtable": "your_encodedtable_value",
            "printoptions": [
            {
                "value": "option1",
                "label": "Option 1"
            },
            {
                "value": "option2",
                "label": "Option 2"
            }
            ],
            "str": "Print",
            "applyfilterondownload": "1"
        }
    }
}}

{{#print}}
    <form method="post"
          action="{{baseurl}}"
          class="dataformatselector wb-table-download-buttons mt-2"
          {{#applyfilterondownload}}data-applyfilter="1"{{/applyfilterondownload}}>
        <div class="form-inline text-xs-right">
            <input type="hidden" name="sesskey" value="{{sesskey}}">
            <input type="hidden" name="idstring" value="{{idstring}}">
            <input type="hidden" name="encodedtable" value="{{encodedtable}}">
            <input type="hidden" name="whichview" value="showactive">
            <select name="download" id="downloadtype_download" class="form-control custom-select mr-1">
                {{#printoptions}}
                    <option value="{{value}}">{{label}}</option>
                {{/printoptions}}
            </select>
            <button type="submit" class="btn btn-secondary">{{#str}} print, local_wunderbyte_table {{/str}}</button>
        </div>
    </form>
{{/print}}